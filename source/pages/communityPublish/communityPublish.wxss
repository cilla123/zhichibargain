.communityPublish-wrap{
  background-color: #eee;
  height: 100vh;
}
.communityPublish-main{
  padding: 15px;
  background-color: #fff;
  border-bottom: 1px solid #d7d7d7;
}
.communityPublish-title-input{
  width: 100%;
  height: 30px;
  border: none;
  border-bottom: 1px solid #e6e6e6;
  outline: none;
  font-size: 14px;
}
.communityPublish-content-input{
  width: 100%;
  height: 100px;
  border: none;
  margin-top: 10px;
  resize: none;
  outline: none;
  font-size: 12px;
}
.communityPublish-img-wrap{
  margin-top: 5px;
}
.communityPublish-item, .communityPublish-item-add{
  float: left;
  width: 150rpx;
  height: 150rpx;
  position: relative;
  margin-right: 18rpx;
  margin-top: 10px;
}
.communityPublish-item > image{
  width: 100%;
  height: 100%;
}
.communityPublish-item-delete{
  display: block;
  width: 18px;
  height: 18px;
  text-align: center;
  line-height: 18px;
  font-size: 16px;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 11px;
  background-color: #FF4343;
  position: absolute;
  top: 2px;
  right: 2px;
}
.communityPublish-item-add{
  text-align: center;
  color: #cbcbcb;
  font-size: 12px;
  border: 1px dashed #ccc;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  overflow: hidden;
}
.communityPublish-item-add span {
  font-size: 30px;
}
.communityPublish-tip{
  color: #a3a3a3;
  margin-top: 15px;
  font-size: 0.6em;
}
.communityPublish-btn{
  display: block;
  width: 90%;
  height: 35px;
  border: none;
  color: #fff;
  background-color: #00b6f8;
  margin: 0 auto;
  border-radius: 3px;
  margin-top: 20px;
  line-height: 35px;
}
.communityPublish-classify-wrap{
  margin-top: 10px;
  padding: 15px;
  background: #fff;
}
.communityPublish-classify{
  margin-left: 15px;
  padding-left: 10px;
  color: #999;
}
.communityPublish-classify-title {
  line-height: 32px;
  height: 32px;
  color: #999;
}
.communityPublish-classify-title label {
  margin-right: 8px;
}
.communityPublish-classify > text {
  display: inline-block;
  margin-right: 8px;
  margin-top: 8px;
  padding: 4px 10px;
  line-height: 12px;
  border: 1px solid #999;
  border-radius: 16px;
  font-size: 12px;
}
.communityPublish-classify > text.selected {
  border-color: #3091f2;
  color: #3091f2;
}

.communityPublish-center {
  margin-top: 10px;
  padding: 0 15px;
  background: #fff;
}
.communityPublish-center > view {
  display: flex;
  align-items: center;
  height: 36px;
  line-height: 36px;
  font-size: 12px;
}
.communityPublish-center label {
  margin-right: 8px;
  font-size: 16px;
  color: #999; 
}
.communityPublish-center input {
  flex: 1;
}
.communityPublish-address {
  border-bottom: 1px solid #ddd;
}
.communityPublish-foot {
  margin-bottom: 100px;
}